{
  "name": "velzon-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/velzon-sdk/src",
  "prefix": "sdk",
  "projectType": "library",
  "tags": ["sdk"],
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/velzon-sdk/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  },
   "assets": [
    {
      "glob": "**/*",
      "input": "libs/velzon-sdk/src/assets",
      "output": "assets"
    }
 ],
 "styles": [
    "node_modules/prismjs/themes/prism.css",
    "node_modules/shepherd.js/dist/css/shepherd.css",
    "node_modules/flatpickr/dist/flatpickr.css",
    "node_modules/@ctrl/ngx-emoji-mart/picker.css",
    "node_modules/slick-carousel/slick/slick.scss",
    "node_modules/slick-carousel/slick/slick-theme.scss",
    "libs/velzon-sdk/src/assets/scss/config/corporate/bootstrap.scss",
    "libs/velzon-sdk/src/assets/scss/config/corporate/app.scss",
    "libs/velzon-sdk/src/assets/scss/icons.scss" 
  ],
 "scripts": [
    "node_modules/jquery/dist/jquery.min.js",
    "node_modules/slick-carousel/slick/slick.min.js"
  ]
}
